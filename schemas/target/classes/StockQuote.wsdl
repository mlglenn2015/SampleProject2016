        <operation name="GetStockPrice">
            <input name="GetStockPriceRequestMessage">
                <soap:body use="literal" />
            </input>
            <output name="GetStockPriceResponseMessage">
                <soap:body use="literal" />
            </output>
        </operation>

    </binding>

    <service name="StockQuoteService">
        <port binding="tns:StockTickerBinding" name="StockTickerPort">
            <soap:address location="http://localhost:8080/StockTicker/" />
        </port>
    </service>

</definitions>