                <configuration>
                    <includes>
                        <include>**/*Test*.java</include>
                        <include>**/*Tests*.java</include>
                    </includes>
                    <systemPropertyVariables>
                        <ENVIRONMENT>dev</ENVIRONMENT>
                        <path_1>../src/ssl_certs/client.jks</path_1>
                        <path_2>../src/ssl_certs/trusted_certs</path_2>
